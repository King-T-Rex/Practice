<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.GraphicController">

    <top>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Курсор: Перекрёстие" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="5">
                    <Label text="X:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="fieldX" text="100" prefWidth="80"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Y:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="fieldY" text="100" prefWidth="80"/>
                </VBox>

                <Button fx:id="btnDraw" text="Построить перекрёстие" onAction="#onDraw" style="-fx-font-size: 14px;"/>
            </HBox>

            <Label fx:id="lblStatus" text="Введите координаты или кликните по полю" style="-fx-font-size: 14px; -fx-text-fill: #007AFF;"/>
        </VBox>
    </top>

    <center>
        <Pane fx:id="drawingPane" style="-fx-background-color: #f5f5f5;" prefWidth="600" prefHeight="360"/>
    </center>

    <bottom>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Отчёт о построении:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtReport" editable="false" wrapText="true" prefRowCount="6"/>
        </VBox>
    </bottom>

</BorderPane>
